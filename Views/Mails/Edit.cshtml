@model GruppNrSexMVC.Models.MailListModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit your Mail</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Mailadress" class="control-label"></label>
                <input asp-for="Mailadress" class="form-control" />
                <span asp-validation-for="Mailadress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="buttonCard" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
