    <!--ADD NEW MAIL TO LIST-->
    <script>
        function newmail(mailadress) {
            const data = mailadress;

            fetch('http://193.10.202.76/MailAPI/api/MailList/addMail', {
                method: 'POST', // or 'PUT'
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
                .then(response => response.json())
                .then(data => {
                    console.log('Success:', data);
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        }
    </script>
    



