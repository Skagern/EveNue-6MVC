                <input type="file" asp-for="UppladdadBild" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <Button type="submit" class="buttonCreate"><span class="text">Spara</span></Button>
            </div>
