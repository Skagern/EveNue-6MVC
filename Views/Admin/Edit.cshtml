}
<div>
    <a asp-action="Index"><button class="buttonEdit"><span class="text">Tillbaka Till Sponsorer</span></button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
