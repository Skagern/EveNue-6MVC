@model GruppNrSexMVC.Models.Sponsor

@{
    ViewData["Title"] = "Edit";
}

<h1>KORRIGERA SPONSOR</h1>


<hr />

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <p class="col-md-2"><strong>Namn</strong></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <p class="col-md-2"><strong>Beskrivning</strong></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <p class="col-md-2"><strong>Hemsida</strong></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <p class="col-md-2"><strong>Mailadress</strong></p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <p class="col-md-2"><strong>Bild</strong></p>
            <div class="col-md-10">
                <input type="file" asp-for="UppladdadBild" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <Button type="submit" class="buttonCreate"><span class="text">SPARA</span></Button>
            </div>
        </div>
    </div>
}
<div>
    <a asp-action="Index"><button class="buttonEdit"><span class="text">TILLBAKA TILL SPONSORER</span></button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
